<div id="app">
    <div class="page has-sidebar-left">
        <header class="blue accent-3 relative">
            <div class="container-fluid text-white">
                <div class="row p-t-b-10 ">
                    <div class="col">
                        <h4>
                            <i class="icon-package"></i>
                            Courses
                        </h4>
                    </div>
                </div>
                <div class="row">
                    <ul class="nav responsive-tab nav-material nav-material-white">
                        <li>
                            <a class="nav-link active" href="/course"><i class="icon icon-list"></i>All
                                Courses</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/course/add"><i class="icon icon-plus-circle"></i> Add New
                                Course</a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="container-fluid animatedParent animateOnce my-3">
            <div class="animated fadeInUpShort">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card no-b shadow">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover " id="table">
                                        <thead>
                                            <tr>
                                                <td>Course Image</td>
                                                <td>Course Name</td>
                                                <td>Category</td>
                                                <td>Teacher</td>
                                                <td>Last Modify</td>
                                                <td>Create At</td>
                                                <td>Action</td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td class="category"></td>
                                                <td class="teacher"></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.courses}}
                                            <tr class="no-b clickable-row">
                                                <td class="w-10"><img src="{{encodeMyString courseImage}}" alt="">
                                                </td>
                                                <td>
                                                    <h6>{{courseName}}</h6>
                                                </td>
                                                <td>{{subCategoryName}}</td>
                                                <td>{{firstName}} {{lastName}}</td>
                                                <td>
                                                    <span><i class="icon icon-timer"></i>{{date modifyAt}}</span>
                                                </td>
                                                <td><i class="icon icon-timer"></i>{{date createAt}}</td>
                                                <td>
                                                    <div class="col">
                                                        <a href="/course/detail/{{id}}"
                                                            class="btn-fab btn-fab-sm btn-primary shadow text-white mr-1"><i
                                                                class="icon-eye3"></i></a>
                                                        <a href="/course/edit/{{id}}"
                                                            class="btn-fab btn-fab-sm btn-success shadow text-white mr-1"><i
                                                                class="icon-pencil"></i></a>
                                                    </div>
                                                    <div class="col mt-1">
                                                        <a class="btn-fab btn-fab-sm btn-warning shadow text-white mr-1 updateStatus"
                                                            data-id="{{id}}" style="cursor: pointer;">
                                                            {{#ifEquals status 'deactivate'}}
                                                            <i class="icon-lock"></i>
                                                            {{/ifEquals}}
                                                            {{#ifEquals status 'active'}}
                                                            <i class="icon-lock-open2"></i>
                                                            {{/ifEquals}}
                                                        </a>
                                                        <a class="btn-fab btn-fab-sm btn-danger shadow text-white deleteRow"
                                                            style="cursor: pointer;" data-id="{{id}}"><i
                                                                class="icon-trash"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="control-sidebar-bg shadow white fixed"></div>
</div>
<script>
    $(document).ready(function () {
        $('.category').append('<input type="text" placeholder="Search category" style="width: 150px"/>');
        $('.category input').on('keyup change', function () {
            if (table.column(2).search() !== this.value) {
                table
                    .column(2)
                    .search(this.value)
                    .draw();
            }
        });
        $('.teacher').append('<input type="text" placeholder="Search teacher" style="width: 150px"/>');
        $('.teacher input').on('keyup change', function () {
            if (table.column(3).search() !== this.value) {
                table
                    .column(3)
                    .search(this.value)
                    .draw();
            }
        });

        const table = $('#table').DataTable({
            "pagingType": "full_numbers",
            "pageLength": 5,
            "lengthChange": false,
            fixedHeader: true,
            orderCellsTop: true,
        });


        $('#table tbody').on('click', '.updateStatus', function () {
            const id = $(this).data('id')
            $.post(`/course/status/${id}`).then(() => {
                $(this).children('i').prop('class') == 'icon-lock' ? $(this).children('i').removeClass('icon-lock').addClass('icon-lock-open2') : $(this).children('i').removeClass('icon-lock-open2').addClass('icon-lock')
            })
        })

        $('#table tbody').on('click', '.deleteRow', function () {
            const id = $(this).data('id')
            $.post(`/course/delete/${id}`).then(() => {
                table
                    .row($(this).parents('tr'))
                    .remove()
                    .draw();
            })
        })
    });
</script>