<div class="page has-sidebar-left">
    <header class="blue accent-3 relative">
        <div class="container-fluid text-white">
            <div class="row p-t-b-10 ">
                <div class="col">
                    <h4>
                        <i class="icon-package"></i>
                        Categorys
                    </h4>
                </div>
            </div>
            <div class="row">
                <ul class="nav responsive-tab nav-material nav-material-white">
                    <li>
                        <a class="nav-link" href="/category"><i class="icon icon-list"></i>All
                            Categorys</a>
                    </li>
                    <li>
                        <a class="nav-link active" href="/category/add"><i class="icon icon-plus-circle"></i> Add New
                            Category</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container-fluid animatedParent animateOnce my-3">
        <div class="animated fadeInUpShort">
            <form id="needs-validation" novalidate method="POST" action="/category/add">
                <div class="row">
                    <div class="col-md-8 ">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label>Category Name</label>
                                <input type="text" class="form-control" id="validationCustom01" required name="name">
                                <small style="color: #ed5564;">{{err_message}}</small>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Add</button>
                        <script>
                            // Example starter JavaScript for disabling form submissions if there are invalid fields
                            (function () {
                                "use strict";
                                window.addEventListener("load", function () {
                                    var form = document.getElementById("needs-validation");
                                    form.addEventListener("submit", function (event) {
                                        if (form.checkValidity() == false) {
                                            event.preventDefault();
                                            event.stopPropagation();
                                        }
                                    }, false);
                                }, false);
                            }());
                        </script>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>