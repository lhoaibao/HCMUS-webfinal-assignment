<div class="page has-sidebar-left">
    <header class="blue accent-3 relative">
        <div class="container-fluid text-white">
            <div class="row p-t-b-10 ">
                <div class="col">
                    <h4>
                        <i class="icon-package"></i>
                        Categories
                    </h4>
                </div>
            </div>
            <div class="row">
                <ul class="nav responsive-tab nav-material nav-material-white">
                    <li>
                        <a class="nav-link" href="/category"><i class="icon icon-list"></i>All
                            Categories</a>
                    </li>
                    <li>
                        <a class="nav-link" href="/category/add"><i class="icon icon-plus-circle"></i> Add New
                            Category</a>
                    </li>
                    <li>
                        <a class="nav-link active" href="/category/addSub"><i class="icon icon-plus-circle"></i> Add New
                            Sub Category</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container-fluid animatedParent animateOnce my-3">
        <div class="animated fadeInUpShort">
            {{#if message}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{message}}
            </div>
            {{/if}}
            {{#if err_message}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{err_message}}
            </div>
            {{/if}}
            <form id="needs-validation" novalidate method="POST" action="/category/addSub">
                <div class="row">
                    <div class="col-md-8 ">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label>Choose Category Name</label>
                                <select class="form-select form-control r-0" name="categoryId" required>
                                    {{#each categories}}
                                    <option value="{{id}}">{{categoryName}}</option>
                                    {{/each}}
                                </select>
                                <div class="invalid-feedback">
                                    Please provide a Category.
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label>Sub Category Name</label>
                                <input type="text" class="form-control" required name="subCategoryName">
                                <div class="invalid-feedback">
                                    Please provide a Sub Category Name.
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label>Sub Category Description</label>
                                <input type="text" class="form-control" name="subCategoryDesc">
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Add</button>
                        <script>
                            (function () {
                                "use strict";
                                window.addEventListener("load", function () {
                                    var form = document.getElementById("needs-validation");
                                    form.addEventListener("submit", function (event) {
                                        if (form.checkValidity() == false) {
                                            event.preventDefault();
                                            event.stopPropagation();
                                        }
                                        form.classList.add("was-validated");
                                    }, false);
                                }, false);
                            }());
                        </script>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>