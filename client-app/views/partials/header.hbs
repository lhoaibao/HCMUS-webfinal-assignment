{{#section 'js'}}
<script>
    document.querySelector('.mini-photo-wrapper').addEventListener('click', function () {
        document.querySelector('.menu-container').classList.toggle('active');
    });
</script>
{{/section}}
<header class="header-area">
    <div class="header-top">
        <div class="container">
            <div class="header-top-wrapper d-flex flex-wrap justify-content-sm-between">
                <div class="header-top-left mt-10">
                    <ul class="header-meta">
                        <li><a href="mailto://infoedumate@example.com">edumate@company.com</a></li>
                    </ul>
                </div>
                <form id="frmLogout" method="POST" action="/account/log-out"></form>
                <div class="header-top-right mt-10 ">
                    <div class="mr-4 header-link">
                        {{#if authUser}}
                        <a href="/user/wishlist" style="cursor: pointer;" class="mr-1">
                            <i class="fa fa-heart"></i>
                        </a>
                        {{/if}}
                        <a href="/cart" class="mr-3 ml-2">
                            <i class="fa fa-shopping-cart"></i>
                            <span class="badge badge-primary rounded-circle">3</span>
                        </a>
                        {{#if isAuth}}
                        <div class="btn-group">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                aria-expanded="false">
                                {{#if authUser.userImage}}
                                <img src="data:image/png;base64,{{avatar}}" class="rounded-circle" alt="avatar"
                                    width="40" height="40">
                                {{else}}
                                <img src="{{avatar}}" class="rounded-circle" alt="avatar" width="40" height="40">
                                {{/if}}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right user-menu" role="menu">
                                <div class=" user-menu-item">
                                    <a href="/user/profile" class="d-flex align-items-center">
                                        {{#if authUser.userImage}}
                                        <div class="user-avt"> <img src="data:image/png;base64,{{avatar}}"
                                                class="rounded-circle" alt="avatar" width="56" height="56"></div>
                                        {{else}}
                                        <div class="user-avt ">
                                            <img src="{{avatar}}" class="rounded-circle" alt="avatar" width="56"
                                                height="56">
                                        </div>
                                        {{/if}}

                                        <div class="user-info-login">
                                            <p class="user-name-login">{{authUser.firstName}} {{authUser.lastName}}
                                            </p>
                                            <p class="user-email-login">{{authUser.email}}</p>
                                        </div>
                                    </a>
                                </div>
                                <div class="border-bottom"></div>
                                <div class="user-menu-item"><a href="/user/learning">My learning</a>
                                </div>
                                <div class=" user-menu-item"><a href="/user/profile">My profile</a>
                                </div>
                                <div class=" user-menu-item"><a href="/cart">My cart</a></div>
                                <div class=" user-menu-item"><a href="#">Teach on Edumate</a></div>
                                <div class="border-bottom"></div>
                                {{#if isTeacher}}
                                <div class=" user-menu-item"><a href="#">Admin Panel</a></div>
                                <div class="border-bottom"></div>
                                {{/if}}

                                <div class=" user-menu-item" onclick="javascript: $('#frmLogout').submit();"><a>Log
                                        out</a></div>

                            </div>
                        </div>
                        {{else}}
                        <a class="login" href="/account/sign-in">Login</a>
                        <a class="register" href="/account/sign-up">Register</a>
                        {{/if}}

                    </div>

                </div>
            </div>
        </div>
    </div>

    {{!-- Cart list --}}


    <div id="navigation" class="navigation navigation-landscape">
        <div class="container position-relative">
            <div class="row align-items-center">
                <div class="col-lg-3">
                    <div class="header-logo">
                        <a href="/"><img src="images/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 position-static">
                    <div class="nav-toggle"></div>
                    <nav class="nav-menus-wrapper">
                        <ul class="nav-menu">
                            <li>
                                <a class="active" href="/">Home</a>
                            </li>
                            <li>
                                <a href="#">Categories</a>
                                <ul class="nav-dropdown nav-submenu">
                                    {{#each this.categories }}
                                    <li><a href="/categories/{{id}}">{{categoryName}}</a></li>
                                    {{/each}}

                                </ul>
                            </li>
                            <li>
                                <a href="/events">Events</a>
                            </li>
                            <li>
                                <a href="/teachers">Teachers</a>
                            </li>
                            <li><a href="contact.html">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 position-static">
                    <div class="header-search">
                        <form action="#">
                            <input type="text" placeholder="Search">
                            <button><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>